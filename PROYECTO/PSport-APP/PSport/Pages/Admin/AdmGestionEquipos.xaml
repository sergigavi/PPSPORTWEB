<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSport.Pages.Admin.AdmGestionEquipos"
             Appearing="ContentPage_Appearing"
             Title=""
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">
    
    <ScrollView>

        <VerticalStackLayout Spacing="15" Margin="30, 20">

            <Label Margin="0, 20,0,0" Text="GESTIÓN EQUIPOS ADMIN" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

            <Entry x:Name="entryNombre" Placeholder="Nombre" PlaceholderColor="Grey" />

            <Label Text="Deporte:"/>
            <Picker x:Name="pickerDeporte" />

            <Button x:Name="BtnAnnadirEquipo" Text="Añadir Equipo" Clicked="BtnAnnadirEquipo_Clicked"  Padding="0" FontSize="18" Margin="0,15,0,10"  CornerRadius="25" BorderWidth="1.4" />

        </VerticalStackLayout>

    </ScrollView>
    
</ContentPage>
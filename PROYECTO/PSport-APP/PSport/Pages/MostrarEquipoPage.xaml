<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSport.Pages.MostrarEquipoPage"
             Title=""
             Appearing="ContentPage_Appearing"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>

        <VerticalStackLayout Spacing="10" Margin="20, 10">

            <Image Margin="0" VerticalOptions="Center" HorizontalOptions="Center" Aspect="AspectFit" HeightRequest="240" WidthRequest="240" Source="psportlogosinfondo.png" />

            <Label Text="Nombre del equipo:" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="lblNombre" Text="" FontSize="20"/>

            <Label Text="Deporte:" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="lblDeporte" Text="" FontSize="20"/>

            <Button x:Name="btnUnirme" Text="Unirse a equipo" Clicked="btnUnirme_Clicked" FontSize="18" CornerRadius="25" BorderWidth="1.4" Margin="0,10"/>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>